<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.siebyla.kamil.flashcardsboard">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="FLASHY"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".authorization.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".authorization.LoginActivity">
        </activity>
        <activity android:name=".flashcards.FlashcardsBoardActivity">
        </activity>
        <activity android:name=".flashcards.CreateFlashcardActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".flashcards.FlashcardsBoardActivity"/>
        </activity>
    </application>

</manifest>