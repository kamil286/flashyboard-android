<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".flashcards.CreateFlashcardActivity"
        android:background="@android:color/holo_green_light"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <EditText
            android:layout_width="319dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edittext_flashcard_title"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:hint="Title"/>



    <EditText
            android:id="@+id/edittext_flashcard_content"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:layout_width="312dp"
            android:layout_height="184dp"
            android:ems="10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edittext_flashcard_title"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_edit_text"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Content"
            android:paddingLeft="8dp"/>

    <Button
            android:background="@drawable/rounded_button"
            android:text="SAVE FLASHCARD"
            android:layout_width="315dp"
            android:layout_height="51dp"
            android:id="@+id/button_save_flashcard"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edittext_flashcard_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>